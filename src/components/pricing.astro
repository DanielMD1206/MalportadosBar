---
// No necesitas props para este ejemplo simple
---

<div class="flex flex-col w-full border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
  <div class="text-center">
    <h4 class="text-lg font-medium text-gray-400">Reserva tu mesa</h4>
    <p class="mt-3 text-2xl font-bold text-black md:text-3xl">
      Completa el formulario para reservar tu mesa.
    </p>
  </div>
  <form
    action="/reservations"
    method="POST"
    class="mt-8 space-y-4">
    <div>
      <label for="name" class="block text-gray-600">Nombre:</label>
      <input
        id="name"
        name="name"
        type="text"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md"
      />
    </div>
    <div>
      <label for="email" class="block text-gray-600">Correo Electrónico:</label>
      <input
        id="email"
        name="email"
        type="email"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md"
      />
    </div>
    <div>
      <label for="phone" class="block text-gray-600">Teléfono:</label>
      <input
        id="phone"
        name="phone"
        type="tel"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md"
      />
    </div>
    <div>
      <label for="date" class="block text-gray-600">Fecha:</label>
      <input
        id="date"
        name="date"
        type="date"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md"
      />
    </div>
    <div>
      <label for="time" class="block text-gray-600">Hora:</label>
      <input
        id="time"
        name="time"
        type="time"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md"
      />
    </div>
    <div>
      <label for="guests" class="block text-gray-600">Número de Personas:</label>
      <input
        id="guests"
        name="guests"
        type="number"
        min="1"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md"
      />
    </div>
    <div class="mt-8">
      <button
        type="submit"
        class="w-full py-2 px-4 bg-primary text-black rounded-md hover:bg-primary-dark">
        Reservar Mesa
      </button>
    </div>
  </form>
</div>

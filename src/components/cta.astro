---
import Link from "./ui/link.astro";
---

<div class="bg-black p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white text-4xl md:text-6xl tracking-tight">
    Conoce Nuestros Productos
  </h2>
  <p class="text-slate-400 mt-4 text-lg md:text-xl">
    Conoce un poco de nosotros, de lo que vendemos, no te vamos a desepcionar con nuestros cocteles, aguardientes, shots exquisitos y cervezas a un excelente precio
  </p>
  <div class="flex mt-5">
    <Link href="/blog" style="inverted">Ver productos</Link>
  </div>
</div>



<!-- Contenedor para el mapa -->
<div id="map" class="h-80 mt-10"></div>

<!-- Google Maps script -->
<script type="module">
  import { onMount } from 'astro/client';

  onMount(() => {
    // Función de inicialización del mapa
    window.initMap = function() {
      const map = new google.maps.Map(document.getElementById("map"), {
        center: { lat: 4.746368, lng: -74.097280 }, // Coordenadas de prueba
        zoom: 12,
      });
    };

    // Cargar el script de Google Maps
    const script = document.createElement('script');
    script.src = `https://maps.googleapis.com/m<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3976.139390242567!2d-74.10005842564824!3d4.745820341266073!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e3f84f5a1ea4127%3A0x3c303f0c60cf8fa0!2sCl.%20142%20%23104-53%2C%20Bogot%C3%A1!5e0!3m2!1sen!2sco!4v1725569509583!5m2!1sen!2sco" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"`;
    script.async = true;
    script.defer = true;
    document.head.appendChild(script);
  });
</script>
